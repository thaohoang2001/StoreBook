<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body>
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="jumbotron-heading">FPT SHOPPING CART</h1>
            </div>
        </section>

        <div class="container mb-4">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col" class= "text-right"> Image </th>
                                    <th scope="col">Product</th>
                                    <th scope="col" class="text-center">Quantity</th>
                                    <th scope="col" class="text-right">Price</th>
                                    <th scope="col" class="text-right"> Actions </th>
                                </tr>
                            </thead>
                            <tbody>

                                {{#each listBookOrderDetail}}
                                <tr>
                                    <td><img src="../{{img}}" /> </td>
                                    <td>{{name}}</td>
                                    <td class="text-center">{{quantity}}</td>
                                    <td class="text-right">{{price}}</td>
                                    <td class="text-right"><a class="btn btn-danger"href="/customer/getRemoveFromCart?id={{_id}}"><i class="fa fa-trash"></i></a>  </td>
                                </tr>
                                {{/each}}

                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><strong>Total</strong></td>
                                    <td class="text-right"><strong>{{totalPrice}} VNƒê</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col mb-2">
                    <div class="row">
                        <div class="col-sm-12  col-md-6">
                            <a href="/customer"class="btn btn-block btn-light"> Continue Shopping</a>
                        </div>
                        <div class="col-sm-12 col-md-6 text-right">
                            <button class="btn btn-lg btn-block btn-success text-uppercase">Checkout</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>
</html>
