<!DOCTYPE html>
<html lang="en">

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<body class="sb-nav-fixed">
    
    <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
        <center>
            <h2>Manage Customer Account</h2>
            <div class="form-group">
                <label>Search by Name:</label>
                <div class="input-group">
                    <a href="/admin/adminAddCustomer" class="btn btn-success" style="margin-left: 5%;">
                        <span class="glyphicon glyphicon-plus"></span>
                        <span><strong>Add new Customer</strong></span>
                    </a>
                    <form class="form btn-group align-top" method="post" action="/admin/doSearchCustomer" style="margin-left: 20%; width: 40%;  flex: none;">
                        <input type="search" name="keyword" class="form-control rounded" 
                            placeholder="Search by name (or day of birth)" aria-label="Search" aria-describedby="search-addon" />
                        <button type="submit" class="btn btn-success">Search</button>
                    </form>
                     <a href="/admin" class="btn btn-info" style="margin-left: 5%;">
                        <span class="glyphicon glyphicon-plus"></span>
                        <span><strong>Back Home</strong></span>
                    </a>
                </div>
            </div>
        </center>
        <div class="e-panel card" style="width: 90%; margin-left: 5%">
            <div class="card-body">
                <div class="card-title">
                </div>
                <div class="e-table">
                    <div class="table-responsive table-lg mt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="max-width" style="text-align:center" >Name</th>
                                    <th class="max-width" style="text-align:center; width: 150px">Image</th>
                                    <th class="max-width" style="text-align:center">Email</th>
                                    <th style="text-align:center">Education</th>
                                    <th style="text-align:center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listCustomer}}
                                <tr>
                                    <td class="text-nowrap align-middle">{{name}}</td>
                                    <td class="text-nowrap align-middle">
                                        <center>
                                            <img src="../{{img}}" alt="{{name}}" width="100px" height="100px">
                                        </center>
                                    </td>
                                    <td class="text-nowrap align-middle">{{email}}</td>
                                    <td class="text-nowrap align-middle"><span>{{education}}</span></td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group align-top">
                                            <a href="/admin/adminEditCustomer?id={{id}}" class="btn btn-success">
                                                <span class="glyphicon glyphicon-edit"></span>
                                                <span><strong>Edit</strong></span>
                                            </a>
                                            <a href="/admin/doDeleteCustomer?id={{id}}"
                                                onclick="return confirm('Are you sure?')" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-remove"></span>
                                                <span><strong>Delete</strong></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr> 
                               {{/each}} 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>